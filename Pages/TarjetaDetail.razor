    <div>
        <label>Opciones:</label>
        <div>
            <label for="op1p2">1.</label>
            <input type="text" @bind="tarjeta.Op1P2" id="op1p2" name="Op1P2" />
            <label for="op2p2">2.</label>
            <input type="text" @bind="tarjeta.Op2P2" id="op2p2" name="Op1P2" />
