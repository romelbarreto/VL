@page "/tarjetadetail"
<h3>TarjetaDetail</h3>
@using VLModel

<EditForm Model="@tarjeta">
    <div>
        <label for="titulo">Título:</label>
        <input type="text" @bind="tarjeta.Titulo" id="titulo" name="Titulo" />
    </div>
    <div>
        <label for="cuerpo">Cuerpo:</label>
        <textarea id="cuerpo" @bind="tarjeta.Cuerpo" name=" Cuerpo"></textarea>
    </div>
    <div>
        <label for="enlace">Enlace:</label>
        <input type="text" @bind="tarjeta.Enlace" id=" enlace" name="Enlace" />
    </div>
    <div>
        <label for="dificultad">Dificultad:</label>
        <select id="dificultad" name="Dificultad" @bind="tarjeta.Dificultad">
            <option value="Baja">Baja</option>
            <option value="Media">Media</option>
            <option value="Alta">Alta</option>
        </select>
    </div>
    <div>
        <label for="fecha">Fecha Publicación:</label>
        <input type="date" @bind="tarjeta.Fecha" id=" fecha" name="Fecha" />
    </div>
    <div>
        <label for="palabras">Cantidad de Palabras:</label>
        <input type="text" @bind="tarjeta.Palabras" id=" palabras" name="Palabras" />
    </div>
    <div>
        <label for="genero">Género:</label>
        <select id="genero" name="Genero" @bind="tarjeta.Genero">
            <option value="Ciencia Ficción">Ciencia Ficción</option>
            <option value="Fantasía">Fantasía</option>
            <option value="Misterio">Misterio</option>
            
        </select>
    </div>
    <div>
        <label for="pregunta1">Pregunta 1:</label>
        <input type="text" @bind="tarjeta.Pregunta1" id="pregunta1" name="Pregunta1" />
    </div>
    <div>
        <label>Opciones:</label>
        <div>
            <label for="op1p1">1.</label>
            <input type="text" @bind="tarjeta.Op1P1" id="op1p1" name="Op1P1" />
